{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "bundler",         
    "baseUrl": ".",                         
    "paths": {
      "@/*": ["src/*"]                      
    },
    "skipLibCheck": true,                   
    "types": ["react", "react-native"]      
  },
  "include": [
    "src",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
